<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/shape">

        <TextView
            android:id="@+id/comm_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_regular"
            android:text="Titel"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24dp"
            app:layout_constraintTop_toBottomOf="@+id/comm_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/comm_picture"/>

        <TextView
            android:id="@+id/comm_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_regular"
            android:text="Beschreibung"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comm_title"
            app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/comm_picture"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/corner_radius"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


</androidx.constraintlayout.widget.ConstraintLayout>