<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/report_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder_picture"
         />
    <TextView
        android:id="@+id/report_exp"
        app:layout_constraintTop_toBottomOf="@id/report_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/report_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/report_exp"
        android:orientation="vertical"
        >
        <CheckBox
            android:id="@+id/racism_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rassismus"/>
        <CheckBox
            android:id="@+id/fakenews_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FakeNews"/>
        <CheckBox
            android:id="@+id/unap_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unangebrachter Content"/>
        <CheckBox
            android:id="@+id/hate_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hass"/>
    </LinearLayout>
    <EditText
        android:id="@+id/report_reason"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/report_ll"
        />
    <Button
        app:layout_constraintTop_toBottomOf="@id/report_reason"
        android:id="@+id/report_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Melden"
        />

</androidx.constraintlayout.widget.ConstraintLayout>