<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ibm_medium"
        android:text="Bild:"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/new_community_description_text_edit"
        app:layout_constraintTop_toBottomOf="@+id/new_community_description_text_edit" />

    <View
        style="@style/Divider"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ibm_medium"
        android:text="Beschreibung:"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/new_community_title_text_edit"
        app:layout_constraintTop_toBottomOf="@+id/new_community_title_text_edit" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/ibm_medium"
        android:text="Titel:"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/new_community_header_label"
        app:layout_constraintTop_toBottomOf="@+id/new_community_header_label" />

    <TextView
        android:id="@+id/new_community_header_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/ibm_semi_bold"
        android:text="Erstelle eine neue Community"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_community_title_text_edit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/ibm_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <View
        style="@style/Divider"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/new_community_description_text_edit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="@font/ibm_regular"
        android:inputType="text"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@+id/new_community_title_text_edit"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <ImageButton
        android:id="@+id/new_community_choose_image_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/md_white_1000"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:srcCompat="@drawable/folder" />

    <ImageView
        android:id="@+id/new_community_preview_picture"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/corner_radius_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/new_community_choose_image_button"
        app:srcCompat="@drawable/default_image" />

    <Button
        android:id="@+id/new_community_create_button"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/ibm_medium"
        android:text="Fertig"
        app:layout_constraintEnd_toEndOf="@+id/new_community_preview_picture"
        app:layout_constraintTop_toBottomOf="@+id/new_community_preview_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>