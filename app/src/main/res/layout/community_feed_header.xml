<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f7ff">

    <View
        android:id="@+id/white_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/comm_activity_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#3c3c4349"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/white_view" />

    <ImageView
        android:id="@+id/comm_activity_picture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:background="@drawable/corner_radius_three"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comm_activity_title"
        android:layout_width="0dp"
        android:layout_height="37.5dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/ibm_medium"
        android:textColor="@android:color/black"
        android:textSize="23sp"
        app:autoSizeMaxTextSize="23sp"
        app:autoSizeMinTextSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comm_activity_picture"
        app:layout_constraintTop_toTopOf="@+id/comm_activity_picture" />

    <TextView
        android:id="@+id/comm_activity_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/ibm_regular"
        android:textColor="#707176"
        android:textSize="14sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="7sp"
        app:layout_constraintBottom_toBottomOf="@+id/comm_activity_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comm_activity_picture"
        app:layout_constraintTop_toBottomOf="@+id/comm_activity_title" />

</androidx.constraintlayout.widget.ConstraintLayout>